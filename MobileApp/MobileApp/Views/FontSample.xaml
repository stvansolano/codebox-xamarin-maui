<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileApp.Views.FontSample">
    <ContentPage.Content>
        <StackLayout VerticalOptions = "CenterAndExpand"
                     HorizontalOptions="CenterAndExpand"
                     x:Name="ParentContainer">
                <Label Text="Hello Forms with XAML" />

                <StackLayout Orientation="Horizontal">
                    <Label Text="Italics"
                           FontAttributes="Italic" />
                    <Label Text="Bold"
                           FontAttributes="Bold" />
                </StackLayout>

                <Label Text="Biggest NamedSize"
                       FontSize="Large" />

                <Label BindingContext="{x:Reference FontStepper}"
                       FontSize="{Binding Value}">
                     <Label.FormattedText>
                        <FormattedString >
                            <FormattedString.Spans>
                                <Span Text="Use size "
                                      FontSize="72" />
                                <Span Text="{Binding Value}"
                                      FontSize="{Binding Value}"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
               <Stepper x:Name="FontStepper" Value="72" Minimum="1" Maximum="120" />
                <Label Text="Specify Bold Attribute and Micro Size">
                    <Label.FontAttributes>Bold</Label.FontAttributes>
                    <Label.FontSize>Micro</Label.FontSize>
                </Label>
                <Label Text="Multiple FontAttributes"
                       FontAttributes="Bold, Italic" />
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="Red, "
                                      ForegroundColor="Red"
                                      FontAttributes="Italic"
                                      FontSize="20" />
                                <Span Text=" blue, "
                                      ForegroundColor="Blue"
                                      FontSize="32" />
                                <Span Text=" and green! "
                                      ForegroundColor="Green"
                                      FontSize="12"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>
